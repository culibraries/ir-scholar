<% if f.lookup_action == "edit" %>
    <%= f.input :language, as: :select,
        collection: LanguageService.select_all_options,
        input_html: { class: 'form-control' }
    %>
<% else %>
     <%= f.input :language, as: :select,
        collection: LanguageService.select_all_options,
        selected: "http://id.loc.gov/vocabulary/iso639-2/eng",
        input_html: { class: 'form-control' }
    %>
<% end %>
