<% collection = Hyrax::ResourceTypesService.select_options %>
<% collection.select! { |tuple| tuple.first.include? "Undergraduate Honors Thesis" } if f.object.model.class.to_s == "UndergraduateHonorsThesis" %>
<% collection.select! { |opt| opt.first.include?("Dissertation") || opt.first.include?("Masters") || opt.first.include?("Doctoral")  } if f.object.model.class.to_s == "GraduateThesisOrDissertation" %>
<% collection.select! { |tuple| tuple.first.include?("Article") || tuple.first.include?("Preprint") || tuple.first.include?("Postprint") } if f.object.model.class.to_s == "Article" %>
<% collection.select! { |tuple| tuple.first.include? "Part of Book" } if f.object.model.class.to_s == "BookChapter" %>
<% collection.select! { |tuple| tuple.first == "Book" } if f.object.model.class.to_s == "Book" %>
<% collection.select! { |tuple| tuple.first.include?("Presentation") } if f.object.model.class.to_s == "Presentation" %>

<% collection.select! { |tuple| tuple.first.include?("Conference") } if f.object.model.class.to_s == "ConferenceProceeding" %>
<% collection.select! { |tuple| tuple.first.include?("Data Set") } if f.object.model.class.to_s == "Dataset" %>
<% collection.select! { |tuple| tuple.first.include?("Technical Report") ||  tuple.first.include?("Working Paper") } if f.object.model.class.to_s == "Report" %>
<% collection.select! { |tuple| tuple.first.include?("Audio") || tuple.first.include?("Image") || tuple.first.include?("Poster") || tuple.first.include?("Software") || tuple.first.include?("Undergraduate Thesis") || tuple.first.include?("Video") || tuple.first.include?("Other") || tuple.first.include?("Brief") || tuple.first.include?("Research Brief") || tuple.first.include?("Policy Brief") || tuple.first.include?("Legislative Brief") || tuple.first.include?("Memo") || tuple.first.include?("Policy Memo")} if f.object.model.class.to_s == "Default" %>
<% if f.object.model.class.to_s == "GraduateThesisOrDissertation" || f.object.model.class.to_s == "UndergraduateHonorsThesis" %>
  <%= f.input :resource_type, as: :select, collection: collection,
    input_html: { class: 'form-control', multiple: false }  %>
<% else %>
  <%= f.input :resource_type, as: :select, collection: collection,
    input_html: { class: 'form-control', multiple: true } %>
<% end %>
